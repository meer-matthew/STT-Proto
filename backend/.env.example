# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# JWT Authentication Configuration
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRATION_HOURS=24

# Database Configuration
DATABASE_URL=sqlite:///stt.db
# For PostgreSQL: postgresql://username:password@localhost/dbname
# For MySQL: mysql://username:password@localhost/dbname

# AI Provider Configuration
# Options: 'openai', 'anthropic', or 'mock' (for testing without API keys)
AI_PROVIDER=mock

# OpenAI Configuration (if using AI_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
# Other options: gpt-4, gpt-4-turbo-preview

# Anthropic Configuration (if using AI_PROVIDER=anthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# AI_MODEL=claude-3-opus-20240229
# Other options: claude-3-sonnet-20240229, claude-3-haiku-20240307

# Server Configuration
PORT=5001
HOST=0.0.0.0

# CORS Configuration (for React Native app)
# Add your frontend URL if needed
ALLOWED_ORIGINS=*

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Text-to-Speech Configuration (future)
# TTS_PROVIDER=elevenlabs
# ELEVENLABS_API_KEY=your-elevenlabs-api-key
